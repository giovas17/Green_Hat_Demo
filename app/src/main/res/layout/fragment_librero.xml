<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@android:color/white">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView7"
            android:adjustViewBounds="true"
            android:src="@drawable/descargatulibro"
            android:layout_centerVertical="true"
            android:layout_margin="30dp"
            android:layout_toRightOf="@+id/imageView10"
            android:layout_toEndOf="@+id/imageView10" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView10"
            android:maxWidth="270dp"
            android:adjustViewBounds="true"
            android:layout_margin="20dp"
            android:src="@drawable/logo_catalogo"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

    <TableLayout
        android:id="@+id/tableBooks"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/cajon">

            <ImageView
                android:id="@+id/book1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/primaria5"
                android:paddingTop="50dp"
                android:paddingBottom="20dp"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/primaria1"
                android:paddingTop="50dp"
                android:paddingBottom="20dp"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/portadarobotica5"
                android:paddingTop="50dp"
                android:paddingBottom="20dp"/>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/cajon">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/portadarobotica3"
                android:paddingTop="50dp"
                android:paddingBottom="20dp"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/pimaria3"
                android:paddingTop="50dp"
                android:paddingBottom="20dp"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/primaria6"
                android:paddingTop="50dp"
                android:paddingBottom="20dp"/>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/cajon">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/portadarobotica5"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:paddingTop="50dp"
                android:paddingBottom="20dp"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/portada1"
                android:paddingRight="20dp"
                android:paddingLeft="10dp"
                android:paddingTop="50dp"
                android:paddingBottom="20dp"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/portadarobotica3"
                android:paddingRight="20dp"
                android:paddingLeft="10dp"
                android:paddingTop="50dp"
                android:paddingBottom="20dp"/>

        </TableRow>

    </TableLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/paginas_editadas"
        android:id="@+id/buttonEditadas"
        android:background="@drawable/button_blue"
        android:textColor="@android:color/white" />

</LinearLayout>