<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/fondo"
        android:scaleType="centerCrop"
        android:layout_below="@+id/linearLayout"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/activatedLoginButton">

        <ImageView
            android:id="@+id/nosotrosButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/nosotros"/>

        <ImageView
            android:id="@+id/libreriaButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:clickable="true"
            android:src="@drawable/mis_libros"/>

        <ImageView
            android:id="@+id/contactButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/contacto"/>

    </LinearLayout>


    <View
        android:layout_width="20dp"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:id="@+id/view2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonCatalogo"
        android:maxWidth="120dp"
        android:clickable="true"
        android:adjustViewBounds="true"
        android:src="@drawable/catalogo"
        android:layout_above="@+id/view2"
        android:layout_toRightOf="@+id/view2"
        android:layout_toEndOf="@+id/view2" />



</RelativeLayout>